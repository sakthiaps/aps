<div class="container signup">
  <h2>Sign Up</h2>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <h5>Some error occured</h5>
        <ul>
          <% @user.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.text_field :name, placeholder: "Enter your name", class: "validate", :size=>"50" %>
    </div>
    <div>
      <%= f.email_field :email, placeholder: "Enter your email address" %>
    </div>
    <div>
      <%= f.password_field :password, placeholder: "Choose a password(6 characters minimum)", :min_length => 6 %>
    </div>
    <div>
      <%= f.password_field :password_confirmation, placeholder: "Repeat password" %>
    </div>
    <div>
      <%= f.submit "Sign up", class: "btn" %>
      <%= link_to "Cancel", root_path, class: "btn", id: "reset" %>
      <%= link_to "Reset", signup_url, class: "btn", id: "reset" %>
    </div>
  <% end %>
</div>

